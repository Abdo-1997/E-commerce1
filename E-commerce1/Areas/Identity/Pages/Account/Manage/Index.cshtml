@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
 <form id="profile-form" method="post" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-6 " style="height:stretch">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="Input.lastName"></label>
                <input asp-for="Input.lastName" class="form-control" />
                <span asp-validation-for="Input.lastName" class="text-danger"></span>
            </div>
            
    </div>
    <div class="col-md-6">
         <div class="form-group">
                <label asp-for="Input.profilepicture"></label>
                @if (Model.Input.profilepicture != null)
                {
                    <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.profilepicture))" alt="profile pic" style="height:295px"  id="profilepic"/>
                }else{
                    <img src="~/imgs/img_avatar.png" alt="profile pic" style="height:295px;" id="profilepic"/>

                }
                <div class="input-group mt-3">
                    <input type="file" accept="image/*" asp-for="Input.profilepicture" class="form-control" onchange="document.getElementById('profilepic').src=window.URL.createObjectURL(this.files[0])"/>
                    <label asp-for="Input.profilepicture"></label>
                </div>
            </div>
    </div>
</div>
<button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}